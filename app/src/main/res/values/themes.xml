<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LaptopStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="editTextStyle" >@style/App_EditTextStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LaptopStore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:bottomLeftRadius">30dip</item>
        <item name="android:padding">10dip</item>
        <item name="android:textCursorDrawable">@color/black</item>
    </style>
    <style name="Theme.LaptopStore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Theme.LaptopStore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>